@page "/"
@rendermode InteractiveServer
@inject HelloWorldMetrics MetricsService

<PageTitle>Hello, world!</PageTitle>

<h1>Hello, world!</h1>

<p role="status">Current Hello World count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Hello World</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        MetricsService.ButtonPressed();
    }

}